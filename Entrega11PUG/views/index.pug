html
  head
    title="Mi primera plantilla pug"
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", 
      rel="stylesheet", 
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", 
      crossorigin="anonymous"
    )
    link(rel="stylesheet" href="/style.css")
  body 
    div(class="app-container p-3")
      div(class="container d-flex flex-column align-items-center pt-4")
        div(class="list-container col-12 col-xs-10 col-sm-8 col-lg-6")
          h2="Product's List"
          if listExists
            table(class="table table-striped")
              thead
                tr
                  th(scope="col")="#"
                  th(scope="col")="Title"
                  th(scope="col")="Price"
                  th(scope="col")="Thumbnail"
              tbody 
                each product in products
                  tr 
                    th(class="p-4" scope="row")=product.id
                    td(class="p-4")=product.title
                    td(class="p-4")=product.price
                    td
                      img(class="table-img" src=product.thumbnail  alt=`img-${product.id}`)
          else
            h2="No hay productos"

          a(href="/productos/guardar/" class="btn btn-success")="Ingresar productos"
     



    
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM",
      crossorigin="anonymous"
    )